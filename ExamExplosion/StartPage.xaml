<Page x:Class="ExamExplosion.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ExamExplosion"
      xmlns:p ="clr-namespace:ExamExplosion.Properties"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartPage"
      Background="#FFF2CC">

    <Grid>
        <Label x:Name="label" Content="Exam Expl  si  n" HorizontalAlignment="Center" Margin="50" VerticalAlignment="Top" Width="600" HorizontalContentAlignment="Center" FontSize="80" FontFamily="pack://application:,,,/Fonts/#VT323"/>
        <Image Source="pack://application:,,,/Images/Bomb.png" Width="200" HorizontalAlignment="Right" Margin="0,143,0,33"></Image>
        <Image Source="pack://application:,,,/Images/Bomb.png" Width="69" HorizontalAlignment="Right" Margin="0,52,172,288"></Image>
        <Image Source="pack://application:,,,/Images/Bomb.png" Width="75" HorizontalAlignment="Right" Margin="0,56,302,289"></Image>
        <Image Source="pack://application:,,,/Images/Exam.png" Width="200" HorizontalAlignment="Left" Margin="0,137,0,39" RenderTransformOrigin="1.118,1.155"></Image>

        <Button Width="245" Height="100" Background="Transparent" BorderBrush="Transparent" VerticalAlignment="Top" Margin="0,150,0,0" Cursor="Hand" Click="Lobby">
            <Grid>
                <Image Source="pack://application:,,,/Images/ButtonOrange.png" Width="245" Stretch="UniformToFill" Margin="-2,-9,-2,-11" StretchDirection="DownOnly"></Image>
                <Label x:Name="labelPlay" Content="{x:Static p:Resources.globalBtnPlay}" HorizontalAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center" FontSize="40" FontFamily="pack://application:,,,/Fonts/#VT323" Foreground="White"/>
            </Grid>
        </Button>

        <Button Width="245" Height="100" Background="Transparent" BorderBrush="Transparent" VerticalAlignment="Center" Margin="0,175,0,0" Cursor="Hand">
            <Grid>
                <Image Source="pack://application:,,,/Images/ButtonGreen.png" Width="245" Stretch="UniformToFill" Margin="-2,-9,-2,-11" StretchDirection="DownOnly"></Image>
                <Label x:Name="LabelGuest" Content="{x:Static p:Resources.startBtnGuest}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="40" FontFamily="pack://application:,,,/Fonts/#VT323" Foreground="White"/>
            </Grid>
        </Button>
        <Button Width="400" Height="50" Background="Transparent" BorderBrush="Transparent" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" Cursor="Hand" >
            <Label x:Name="LabelCreate" Content="{x:Static p:Resources.startBtnCreateAccount}" 
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center" 
               FontSize="40" FontFamily="pack://application:,,,/Fonts/#VT323" Foreground="Black"/>
        </Button>
        <TextBox x:Name="gamertagTxt" HorizontalAlignment="Left" Margin="224,240,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Page>
